# GLPI MCP Configuration

# GLPI Server Configuration
GLPI_BASE_URL=https://suporte.meucomputador.com.br
GLPI_APP_TOKEN=your_glpi_app_token_here

# Session Configuration (optional - can use APP TOKEN only)
GLPI_USER_TOKEN=

# Server Configuration
MCP_PORT=8824
MCP_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/mcp-servers/_shared/logs/mcp-glpi.log

# Performance Configuration
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60
POOL_WORKERS=2

# Safety Guard Configuration (proteção contra operações destrutivas)
# Quando ativado, operações como delete_ticket, delete_asset, delete_user
# requerem confirmationToken e reason
MCP_SAFETY_GUARD=false
MCP_SAFETY_TOKEN=your_safety_token_here_min_8_chars
